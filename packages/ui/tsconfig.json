{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESnext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "src",
    "outDir": "lib",
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "lib",
  ],
}